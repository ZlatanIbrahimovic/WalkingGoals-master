<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.android_examples.slidingtab_android_examplescom.MainActivity">

    <include layout="@layout/toolbar" />


    <com.android_examples.slidingtab_android_examplescom.CustomTextInputLayout
        android:id="@+id/tilCustom4"
        android:layout_height="wrap_content"
        app:helperText=""
        app:helperTextColor="@color/helperTextColour"
        android:layout_width="370dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <EditText
            android:id="@+id/addGoalTitle"
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:textSize="24sp" />

    </com.android_examples.slidingtab_android_examplescom.CustomTextInputLayout>


    <com.android_examples.slidingtab_android_examplescom.CustomTextInputLayout
        android:id="@+id/tilCustom3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:helperText=""
        app:helperTextColor="@color/helperTextColour"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/addGoalUnitSelector">

        <EditText
            android:id="@+id/addGoalDistance"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Distance"
            android:maxLength="6"
            android:textSize="18sp"
            android:inputType="number|numberDecimal" />

    </com.android_examples.slidingtab_android_examplescom.CustomTextInputLayout>



    <Spinner
        android:layout_width="150dp"
        android:id="@+id/addGoalUnitSelector"
        android:layout_height="48dp"
        android:layout_marginTop="160dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />


</RelativeLayout>
