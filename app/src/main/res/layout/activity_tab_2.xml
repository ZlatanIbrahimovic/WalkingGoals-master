<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:rsb="com.android_examples.slidingtab_android_examplescom.RangeSeekBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.android_examples.slidingtab_android_examplescom.MainActivity">

    <Spinner
        android:id="@+id/historyViewSelector"
        android:layout_height="48dp"
        android:layout_width="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/historyUnitSelector"
        android:layout_height="48dp"
        android:layout_width="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/rangeSeekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/horizontalLine"/>

    <com.android_examples.slidingtab_android_examplescom.RangeSeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        rsb:absoluteMinValue="20"
        rsb:absoluteMaxValue="150"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/rangeSeekBar" />

    <ListView
        android:id="@+id/historyList"
        android:layout_width="fill_parent"
        android:dividerHeight="1dp"
        android:layout_height="530dp"
        android:layout_alignTop="@+id/horizontalLine"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
